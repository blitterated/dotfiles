# GUI man page reader on macOS
function gman () {
  man -t $1 | open -a /System/Applications/Preview.app -f
}

# Open a Markdown file in Marked 2.
# http://jblevins.org/log/marked-2-command
function mark {
  md_file=$1
  marked_exec="Marked 2"
  if [ $md_file ]; then
    open -a "${marked_exec}" $md_file;
  else
    open -a "${marked_exec}"
  fi
}


